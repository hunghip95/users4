<div class='box1'>	
	<div class="container">
		<h1>Sign up</h1>
		<% if @error %>
		<%= @error %>
		<%end%>
		<%= form_for :user,url: users_path do |f| %>
			
		   <%= f.label :name %>
		   <br/>
		   <%= f.text_field :name %>
		   <br/>
		   <%= f.label :email %>
		   <br/>
		   <%= f.email_field :email %>
		   <br/>
		   <%= f.label :password %>
		   <br/>
		   <%= f.password_field :password %>
		   <br/>
		   <%= f.label :ConfirmPassword%>
		   <br/>
		   <%= f.password_field :password_confirmation %>
		   <br/>
		   <%= f.submit "Signup"%>
		 <% end %> 
		 <% if logged_in? %>
			<%= link_to 'Log out',logout_path%>
		<%else%>
			<%= link_to 'Login',login_path%>
		<%end%>
		<%=link_to 'Home',welcome_home_path%>
	</div>
</div>
